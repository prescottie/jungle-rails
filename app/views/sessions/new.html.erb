<h1>Login</h1>

<%= form_tag '/login' do %>
  <div class='row'>
    <div class='col-md-4'>
      <div class='well'>
        <div class='form-group'>
          <%= label_tag 'Email' %>
          <%= email_field_tag :email, nil, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= label_tag 'Password' %>
          <%= password_field_tag :password, nil, class: 'form-control' %>
        </div>
        <%= submit_tag "Submit", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

<% end %>

